@model SuperHeroName

<div class="container">
	<h1>Superhero Search</h1>
	<div class="row">
		<div class="col-md-6">
			<form method="post">
				<div class="form-group">
					<label for="Superhero">Enter the superhero you want to search for</label>
					<input asp-for="naam" type="text" class="form-control" id="Superhero" placeholder="Example: Batman">
				</div>
				<button type="submit" class="btn btn-primary">Search</button>
			</form>
		</div>
	</div>
</div>
@if (@Model != null && @Model.naam != "" && @Model.naam != " ")
{
	<p>@Model.naam</p>
}