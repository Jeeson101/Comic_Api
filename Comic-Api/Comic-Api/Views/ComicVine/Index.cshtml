@{
	ViewBag.Title = "Search Superhero";
}

<h2>Search Superhero</h2>

@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.Label("Superhero Name:")
		@Html.TextBox("heroName", null, new { @class = "form-control" })
		@Html.ValidationMessage("heroName")
	</div>

	<button type="submit" class="btn btn-primary">Search</button>
}

@if (ViewBag.Error != null)
{
	<div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

@if (ViewBag.Result != null)
{
	<div class="alert alert-success" role="alert">@ViewBag.Result</div>
}